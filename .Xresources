Sxiv.foreground: #657b83
Sxiv.background: #fdf6e3
Sxiv.font: mono-10

!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! Gruvbox Material Dark
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
xterm*background: #1d2021
! medium
! xterm*background: #282828
! soft
! xterm*background: #32302f

*foreground: #d4be98

! Black,+ DarkGrey
xterm*color0:  #32302f
xterm*color8:  #32302f
! DarkRed + Red
xterm*color1:  #ea6962
xterm*color9:  #ea6962
! DarkGreen + Green
xterm*color2:  #a9b665
xterm*color10: #a9b665
! DarkYellow + Yellow
xterm*color3:  #e78a4e
xterm*color11: #e78a4e
! DarkBlue + Blue
xterm*color4:  #7daea3
xterm*color12: #7daea3
! DarkMagenta + Magenta
xterm*color5:  #d3869b
xterm*color13: #d3869b
! DarkCyan + Cyan
xterm*color6:  #89b482
xterm*color14: #89b482
! LightGrey + White
xterm*color7:  #d4be98
xterm*color15: #d4be98

Xterm*reverseVideo: False


xterm*transparent:  true
xterm*fading:       50

xterm*utf8:         true
xterm*termName:     xterm-256color
xterm*FaceName:     DejaVu Sans Mono
xterm.FaceNameDoublesize: Noto Sans CJK
xterm.Font:         xft:DejaVu Sans Mono, \
                    xft:Literation Mono Powerline:size=10:antialias=true:hinting=true,\
                    xft:Noto Mono:size=10:antialias=true:hinting=true,\
                    xft:Noto Color Emoji,\
                    xft:Unifont
xterm*FaceSize :    12
xterm*FaceSize1:    12
xterm*FaceSize2:    14
xterm*FaceSize3:    16
xterm*FaceSize4:    18
xterm*FaceSize5:    20
xterm*renderFont:   true
xterm*loginShell:   true
xterm*scaleHeight:  1.01
xterm.letterSpace:  -1


! special
! xterm*foreground:   #000000
! xterm*background:   #e7e9db
! xterm*cursorColor:  #4f424c

! Alt key
xterm*altSendsEscape: true
xterm*metaSendsEscape: true

! Backspace
xterm*backarrowKey: false
xterm*ttyModes: erase ^?

! Scroll line
xterm*saveLines: 4096
! right hand side scrollbar...
XTerm*scrollTtyOutput: false
xterm*rightScrollBar: false
xterm*scrollBar: false
xterm*leftScrollBar: false

! stop output to terminal from jumping down to bottom of scroll again
! xterm*scrollTtyOutput: false

xterm*boldMode: true
xterm*colorBDMode: true
xterm*colorBD: #6F9FE3

! Double-click to select whole URLs :D
xterm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48

xterm*selectToClipboard: true
xterm*vt100*translations: #override \n\
    Ctrl Shift <Key>V:  insert-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>C:  select-end(CLIPBOARD) \n\
    <Key>BackSpace:     string(0x7f) \n\
	<Key>Delete:        string(0x1b) string("[3~")\n\
    Ctrl <Key>H:        string(0x1b) string("[D")\n\
    Ctrl <Key>J:        string(0x1b) string("[B")\n\
    Ctrl <Key>K:        string(0x1b) string("[A")\n\
    Ctrl <Key>L:        string(0x1b) string("[C")\n\
    Ctrl <Key> minus:   smaller-vt-font() \n\
    Ctrl <Key> plus:    larger-vt-font()
XTerm.vt100.allowTitleOps: false

